pipeline {
    agent { label 'docker' }

    stages {
        stage('clean docker') {
            steps {
                sh 'docker stop $(docker ps -q) && docker rm $(docker ps -a -q)'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}