pipeline {
    agent { label 'docker' }

    stages {
        stage('clean docker') {
            steps {
                sh 'docker stop $(docker ps -q) && docker rm $(docker ps -a -q)'
            }
        }
        stage('Test') {
            steps {
                sh 'docker build -t torando:test . && docker rnu -p 8000:8000 torando:test python tests/test.py'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}